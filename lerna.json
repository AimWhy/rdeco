{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "npmClientArgs": ["--production", "--no-optional"],
  "command": {
    "publish": {
      "allowBranch": ["main","base-3.17.3"],
      "conventionalCommits": "conventional-changelog-angular",
      "exact": true,
      "ignoreChanges": ["ignored-file", "*.md", "'**/__tests__/**"],
      "message": "chore(release): publish",
      "registry": "http://npm.dc.servyou-it.com"
    }
  }
}
